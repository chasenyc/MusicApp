<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= csrf_meta_tags %>
</head>
<body>
<%= flash.now[:errors] %>
<% if current_user.nil? %>
  <a href="<%= new_session_url %>">log in</a>
<% else %>
  <%= current_user.email %>
  <form method="POST" action="<%= session_url %>">
    <%= auth_token %>
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit">log out</button>
<% end %>
<hr>

<%= yield %>

</body>
</html>
