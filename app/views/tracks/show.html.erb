<h1>Track Page</h1>

<p>Track Name: <%= @track.name %></p>
<p>On Album: <a href="<%= album_url(@track.album.id) %>"><%= @track.album.title %></a></p>
<p>By: <a href="<%= band_url(@track.band.id) %>"><%= @track.band.name %></a></p>
<p>Regular or Bonus: <%= @track.bonus_or_regular %></p>
<p>Lyrics: <%= ugly_lyrics(@track.lyrics) %></p>

<p>
  <%= render partial: "notes/form", locals: { track: @track } %>
</p>
<p>
  <%= render partial: "notes/note", locals: { track: @track } %>
</p>
<p>
  <a href="<%= edit_track_url(@track.id) %>">Edit Track</a>
</p>
<form method="POST" action="<%= track_url(@track.id) %>">
  <%= auth_token %>
  <input type="hidden" name="_method" value="DELETE">
  <button value="submit">delete</button>
</form>
