<% if band.persisted? %>
  <% name = band.name %>
<% else %>
  <% name = "" %>
<% end %>


<form method="POST" action="<%= band.persisted? ? band_url(band.id) : bands_url %>">
  <input type="hidden" name="_method" value="<%= band.persisted? ? 'PATCH' : 'POST' %>" />
  <%= auth_token %>
  <p><label>Band Name:
    <input type="text" name="band[name]" value="<%= name %>">
  </label></p>
  <button type="submit">create band</button>
</form>
